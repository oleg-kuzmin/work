{
  // Кастомная настройка комментариев (Better Comments)
  "better-comments.tags": [
    {
      "tag": "#",
      "color": "#e3d50e",
      "strikethrough": false,
      "underline": true,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "!",
      "color": "#FF2D00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "?",
      "color": "#3498DB",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "//",
      "color": "#474747",
      "strikethrough": true,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "todo",
      "color": "#FF8C00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "*",
      "color": "#98C379",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    }
  ],

  // Хлебные крошки
  "breadcrumbs.enabled": false,

  // Отображать путь к файлу в навигации хлебных крошек
  "breadcrumbs.filePath": "on",

  // Показывать классы в навигации хлебных крошек
  "breadcrumbs.showClasses": false,

  // Не отображать символы в навигации хлебных крошек
  "breadcrumbs.symbolPath": "off",

  // Подсветка пустых css
  "css.lint.emptyRules": "ignore",

  // Cтиль курсора
  "editor.cursorStyle": "line",

  // Форматировщик по умолчанию
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Семейство шрифтов редактора "Consolas, 'Courier New', monospace"
  "editor.fontFamily": "Consolas",

  // Размер шрифта
  "editor.fontSize": 18,

  // Форматирование при сохранении
  "editor.formatOnSave": false,

  // Точки остановки для отладки
  "editor.glyphMargin": false,

  // Переход к определению (F12)
  "editor.gotoLocation.multipleDefinitions": "goto",

  // Направляющие линии от скобок тем же цветом, что и скобки
  "editor.guides.bracketPairs": true,

  // Вертикальные линии отступов
  "editor.guides.indentation": false,

  // Метка местонахождения внутри вертикального скролбара
  "editor.hideCursorInOverviewRuler": true,

  // Пробелы при нажатии на tab
  "editor.insertSpaces": true,

  // Автоматическое редактирование тегов (замена Auto Rename Tag)
  "editor.linkedEditing": true,

  // Выделение скобок
  "editor.matchBrackets": "never",

  // Мини-карта
  "editor.minimap.enabled": false,

  // Скорость прокрутки мышки
  "editor.mouseWheelScrollSensitivity": 1.5,

  // Изменение масштаба интерфейса при скроле колесиком
  "editor.mouseWheelZoom": false,

  // Подсветка слов
  "editor.occurrencesHighlight": "off",

  // Граница ползунка вертикального скроллбара
  "editor.overviewRulerBorder": true,

  // Горизонтальная линия текущей строки
  "editor.renderLineHighlight": "none",

  // Ползунок вертикального скроллбара
  "editor.scrollbar.vertical": "visible",

  // Размер вертикального скроллбара
  "editor.scrollbar.verticalScrollbarSize": 14,

  // Перечеркивание устаревших переменных, в том числе name
  "editor.showDeprecated": true,

  // Плавный скролл
  "editor.smoothScrolling": true,

  // Снипеты наверху всех подсказок
  "editor.snippetSuggestions": "top",

  // Прилипание верхней строчки объявления функции
  "editor.stickyScroll.enabled": false,

  // Размер табуляции
  "editor.tabSize": 2,

  // Перенос текста по словам
  "editor.wordWrap": "on",

  // Перескакивание на файл в проводнике при открытии файла
  "explorer.autoReveal": false,

  // Сжатие в одну строчку папок в проводнике
  "explorer.compactFolders": false,

  // Подтверждение удаления файла в корзину
  "explorer.confirmDelete": true,

  // Подтверждение переноса папки
  "explorer.confirmDragAndDrop": true,

  // Автоматическое сохранение редактора
  "files.autoSave": "afterDelay",

  // Удаление лишних пробелов при сохранении
  "files.trimTrailingWhitespace": false,

  // Переодическое использование git fetch
  "git.autofetch": false,

  // Подтверждение синхронизации c github
  "git.confirmSync": false,

  // Добавление файлов в stage при коммите
  "git.enableSmartCommit": true,

  // Отключает путь для тегов внизу в строке состояния (Highlight Matching Tag)
  // "highlight-matching-tag.showPath": false,

  // Кастомная настройка цвета (Highlight Matching Tag)
  /*"highlight-matching-tag.styles": {
    "opening": {
      "name": {
        "highlight": "rgba(255, 0, 0, .2)"
      }
    }
  },*/

  // Обновление импортов при переименовании/перемещении файла
  "javascript.updateImportsOnFileMove.enabled": "never",

  // Не показывать всплывающее окно liveServer
  "liveServer.settings.donotShowInfoMsg": true,

  // Режим иконок (Material Icon Theme)
  "material-icon-theme.activeIconPack": "react_redux",

  // Настройка иконок (Material Icon Theme)
  "material-icon-theme.folders.associations": {
    "node": "node",
    "настройка vscode": "vscode",
    "git": "github",
    "00. work": "custom",
    "next": "next",
    "redux": "Redux-actions"
  },

  // Скрытие стрелок возле папок в проводнике (Material Icon Theme)
  "material-icon-theme.hidesExplorerArrows": false,

  // Путь установки php на компьютере
  "php.validate.executablePath": "c:/php/php.exe",

  // Путь установки php на компьютере (phpserver)
  // "phpserver.phpPath": "c:/php/php.exe",

  // Cкобки вокруг единственного параметра стрелочной функции (Prettier)
  "prettier.arrowParens": "avoid",

  // Максимальная ширина кода (Prettier)
  "prettier.printWidth": 100,

  // Одиночные кавычки (Prettier)
  "prettier.singleQuote": true,

  // Подсветка ошибки в пустых scss
  "scss.lint.emptyRules": "ignore",

  // Открытие недоверенных файлов в доверенной области
  "security.workspace.trust.untrustedFiles": "open",

  // Использование Git Bash по умолчанию
  "terminal.integrated.defaultProfile.windows": "Git Bash",

  // Восстановление сеанса терминала
  "terminal.integrated.enablePersistentSessions": false,

  // Размер шрифта терминала
  "terminal.integrated.fontSize": 16,

  // Восстановление сеанса терминала
  "terminal.integrated.persistentSessionReviveProcess": "never",

  // На какой язык переводить
  "vscodeGoogleTranslate.preferredLanguage": "Russian",

  // Высота вкладок
  "window.density.editorTabHeight": "default",

  // Запрет открытия файлов в новом окне
  "window.openFilesInNewWindow": "off",

  // Увеличение интерфейса в окне
  "window.zoomLevel": 0.2,

  // Настройка темы Kimbie Dark
  "workbench.colorCustomizations": {
    "gitDecoration.ignoredResourceForeground": "#cccccc",

    "[Kimbie Dark]": {
      "gitDecoration.ignoredResourceForeground": "#cccccc", // цвет игнорируемых файлов гита
      "tab.activeBackground": "#5e4416", // цвет вкладки
      "tab.activeBorder": "#cc8d21", // граница вкладки
      "editorGutter.modifiedBackground": "#0000", // цвет вертикальной полоски измененных файлов в гите
      "editorGutter.addedBackground": "#0000", // цвет вертикальной полоски измененных файлов в гите
      "editorGutter.deletedBackground": "#0000" // цвет вертикальной полоски измененных файлов в гите
    }
  },

  // Цветовая тема по умолчанию
  "workbench.colorTheme": "Kimbie Dark",

  // Сохранение разделения экрана при закрытии вкладки
  "workbench.editor.closeEmptyGroups": false,

  // Автоматическое закрытии редактора при удалении файла
  "workbench.editor.closeOnFileDelete": true,

  // Предварительный просмотр файлов
  "workbench.editor.enablePreview": true,

  // Что отображается на вкладке
  "workbench.editor.labelFormat": "default",

  // Запоминание положения курсора в редакторе
  "workbench.editor.restoreViewState": false,

  // Отключает вкладки наверху
  "workbench.editor.showTabs": "multiple",

  // Размер вкладок
  "workbench.editor.tabSizing": "fit",

  // Вкладки в несколько строк
  "workbench.editor.wrapTabs": true,

  // Иконки папок в проводнике по умолчанию
  "workbench.iconTheme": "material-icon-theme",

  // Иконки интерфейса проводника по умолчанию
  "workbench.productIconTheme": "material-product-icons",

  // Какой редактор будет отображаться при запуске если не был восстановлен
  "workbench.startupEditor": "none",

  // Прилипание верхней строчки проводника
  "workbench.tree.enableStickyScroll": false,

  // Отступ в проводнике в пикселях
  "workbench.tree.indent": 8,

  // Вертикальные линии в проводнике
  "workbench.tree.renderIndentGuides": "none"
}
